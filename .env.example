# Environment Configuration
# Copy this file to .env and update with your actual values

# TeamDynamix Configuration
TDX_BASE_URL=https://your-tdx-instance.teamdynamix.com
TDX_USERNAME=your-api-username
TDX_PASSWORD=your-api-password
TDX_TOKEN=your-static-token-if-using

# Server Configuration
PORT=3000
NODE_ENV=development

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100

# Caching
CACHE_TTL=300
CACHE_MAX_SIZE=1000

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Security
API_KEY=your-secure-api-key-for-genesys
CORS_ORIGIN=https://your-genesys-domain.com

# TDX API Configuration
TDX_KB_APP_ID=your-knowledge-base-app-id
TDX_TIMEOUT=30000